<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario con filtro para transportadoras -->
    <record id="view_picking_form_license_plate_simple" model="ir.ui.view">
        <field name="name">stock.picking.form.license.plate.simple</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Transport"
                      attrs="{'invisible': [('picking_type_code', 'not in', ['outgoing', 'incoming'])]}">
                    <group>
                        <group string="Vehicle &amp; Driver">
                            <field name="license_plate"/>
                            <field name="driver_name"/>
                            <field name="driver_doc"/>
                        </group>
                        <group string="Carrier Information">
                            <!-- Campo para seleccionar solo partners con clasificación carrier -->
                            <field name="carrier_partner_id"
                                   domain="[('is_carrier', '=', True)]"
                                   options="{'no_create': True, 'no_open': True}"
                                   placeholder="Select Transportation Partner"
                                   context="{'show_vat': True}"/>
                            <field name="carrier_name"
                                   force_save="1"
                                   placeholder="Will be auto-filled from partner"/>
                            <field name="vat_number"
                                   force_save="1"
                                   placeholder="Will be auto-filled from partner VAT"/>
                        </group>
                    </group>
                    <group string="Notes" colspan="4">
                        <field name="transport_notes" nolabel="1"
                               placeholder="Additional transport information..."/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_picking_tree_license_plate" model="ir.ui.view">
        <field name="name">stock.picking.tree.license.plate</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="license_plate" optional="hide"/>
                <field name="driver_name" optional="hide"/>
                <field name="carrier_partner_id" optional="hide"/>
                <field name="vat_number" optional="hide"/>
            </field>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_picking_search_license_plate" model="ir.ui.view">
        <field name="name">stock.picking.search.license.plate</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="license_plate"/>
                <field name="driver_name"/>
                <field name="carrier_partner_id"/>
                <field name="carrier_name"/>
                <field name="vat_number"/>
            </field>
            <group position="inside">
                <filter string="Has License Plate" name="has_license_plate"
                        domain="[('license_plate', '!=', False)]"/>
                <filter string="Missing License Plate" name="missing_license_plate"
                        domain="[('license_plate', '=', False), ('picking_type_code', '=', 'outgoing')]"/>
                <filter string="With Carrier" name="with_carrier"
                        domain="[('carrier_partner_id', '!=', False)]"/>
                <filter string="Missing Carrier Info" name="missing_carrier"
                        domain="['|', ('carrier_partner_id', '=', False), ('carrier_name', '=', False)]"/>
            </group>
        </field>
    </record>

    <!-- Acción rápida para crear transportadora -->
    <record id="action_create_carrier_partner_quick" model="ir.actions.act_window">
        <field name="name">Create Transportation Partner</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{
            'default_is_company': True,
            'default_supplier_rank': 1,
            'default_classification_ids': [(4, ref('contact_classification.classification_carrier'))]
        }</field>
    </record>
</odoo>
